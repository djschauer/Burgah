<div class="container"> 
    <div class="row">
        <div class="col s2"></div>
    </div>
    <div class="input-field col s8">
        <h1>Add a burger to the menu</h1>
        <input placeholder="Placeholder" id="burger" type="text" class="validate">
        <label for="burger">New Burger</label>
        <button class="btn waves-effect waves-deep-orange" type="submit" name="action" id="submitBtn">Submit
        </button>
    </div>
    <div class="col s2"></div>
</div>

<div class="container">
    <div class="row">
        <div class="col s2"></div>
        <div class="col s4">
            <h1>Burgers on the Menu</h1>
            {{#each burgers}}
                {{#unless this.devoured}}
                    <div>
                        <h3>{{this.burger_name}}</h3>
                        <button class="btn waves-effect waves-red darken-4" type="submit" name="action" id="devourBtn">Devour!
                        </button>
                    </div>
                {{/unless}}
            {{/each}}
        </div>
        <div class="col s4">
            <h1>Already Munched</h1>
            {{#each burgers}}
                {{#if this.devoured}}
                    <div>
                        <h3>{{this.burger_name}}</h3>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="col s2"></div>
</div>